{
  "name": "hacker-news-highlights",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "license": "AGPL-3.0-only",
  "author": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc --noEmit",
    "clean:all": "rm -rf cache/* output/*",
    "clean:audio": "rm -rf cache/*.mp3",
    "clean:cache": "rm -rf cache/*",
    "clean:covered-stories": "rm -rf cache/covered-stories",
    "clean:output": "rm -rf output/*",
    "clean:stories": "rm -rf cache/story-*",
    "clean:summaries": "rm -rf cache/summary-* cache/intro-*",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "mp4": "ffmpeg -loop 1 -i cover.png -i output/output.mp3 -c:v libx264 -c:a aac -b:a 192k -shortest -fflags +shortest -pix_fmt yuv420p output/output.mp4",
    "prepare": "husky",
    "start": "NODE_OPTIONS=--no-deprecation tsx src/index.ts",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.0.19",
    "@mozilla/readability": "^0.5.0",
    "ai": "^4.0.36",
    "elevenlabs": "^1.50.2",
    "fluent-ffmpeg": "^2.1.3",
    "jsdom": "^26.0.0",
    "minimist": "^1.2.8",
    "openai": "^4.78.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.4.0",
    "@payloadcms/eslint-config": "^3.9.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jsdom": "^21.1.7",
    "@types/minimist": "^1.2.5",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "sort-package-json": "^2.14.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.2"
  }
}
