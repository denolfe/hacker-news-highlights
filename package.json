{
  "name": "hacker-news-highlights",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "keywords": [],
  "license": "GPL-3.0-only",
  "author": {
    "name": "Elliot DeNolf",
    "url": "https://github.com/denolfe"
  },
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit",
    "clean:all": "rm -rf cache/* output/*",
    "clean:audio": "rm -rf cache/*.mp3",
    "clean:cache": "rm -rf cache/*",
    "clean:covered-stories": "rm -rf cache/covered-stories",
    "clean:output": "rm -rf output/*",
    "clean:stories": "rm -rf cache/story-*",
    "clean:summaries": "rm -rf cache/summary-* cache/intro-*",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "lint:fix": "eslint . --fix",
    "mp4": "ffmpeg -loop 1 -i youtube-thumbnail.png -i output/output.mp3 -c:v libx264 -c:a aac -b:a 192k -shortest -fflags +shortest -pix_fmt yuv420p output/output.mp4",
    "prepare": "husky",
    "start": "NODE_OPTIONS=--no-deprecation tsx src/index.ts",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.2.8",
    "@mozilla/readability": "^0.6.0",
    "ai": "^4.1.66",
    "elevenlabs": "^1.54.0",
    "fluent-ffmpeg": "^2.1.3",
    "jsdom": "^26.0.0",
    "minimist": "^1.2.8",
    "openai": "^4.87.4",
    "pdf-parse": "^2.1.7",
    "tiktoken": "^1.0.21"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.6.0",
    "@payloadcms/eslint-config": "^3.28.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jsdom": "^21.1.7",
    "@types/minimist": "^1.2.5",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "sort-package-json": "^3.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9"
  }
}
