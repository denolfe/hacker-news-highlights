{
  "name": "hacker-news-highlights",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "keywords": [],
  "license": "GPL-3.0-only",
  "author": {
    "name": "Elliot DeNolf",
    "url": "https://github.com/denolfe"
  },
  "type": "module",
  "scripts": {
    "benchmark": "NODE_OPTIONS=--no-deprecation tsx src/index.ts --benchmark",
    "benchmark:stress-test": "NODE_OPTIONS=--no-deprecation tsx src/index.ts --benchmark=data/benchmark-stress-test.json",
    "build": "tsc --noEmit",
    "clean:all": "rm -rf cache/* output/*",
    "clean:audio": "rm -rf cache/*.mp3",
    "clean:cache": "rm -rf cache/*",
    "clean:covered-stories": "rm -rf cache/covered-stories",
    "clean:output": "rm -rf output/*",
    "clean:screenshots": "rm -rf cache/screenshot-*",
    "clean:stories": "rm -rf cache/story-*",
    "clean:summaries": "rm -rf cache/summary-* cache/intro-*",
    "clean:video": "rm -rf output/*.mp4",
    "format": "prettier --write .",
    "postinstall": "puppeteer browsers install chrome",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "mp4": "ffmpeg -loop 1 -i youtube-thumbnail.png -i output/output.mp3 -c:v libx264 -c:a aac -b:a 192k -shortest -fflags +shortest -pix_fmt yuv420p output/output.mp4",
    "prepare": "husky",
    "preview:video": "remotion preview src/video/remotion-entry.tsx --public-dir .",
    "start": "NODE_OPTIONS=--no-deprecation tsx src/index.ts",
    "start:video": "NODE_OPTIONS=--no-deprecation tsx src/index.ts --video",
    "test": "vitest --run",
    "test:content": "vitest --run --config vitest.integration.config.ts",
    "test:screenshots": "NODE_OPTIONS=--no-deprecation tsx scripts/test-screenshots.ts",
    "test:watch": "vitest"
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.29",
    "@mozilla/readability": "^0.6.0",
    "@remotion/bundler": "^4.0.424",
    "@remotion/cli": "^4.0.424",
    "@remotion/google-fonts": "^4.0.424",
    "@remotion/renderer": "^4.0.424",
    "ai": "^6.0.90",
    "elevenlabs": "^1.59.0",
    "fluent-ffmpeg": "^2.1.3",
    "jsdom": "^26.1.0",
    "minimist": "^1.2.8",
    "openai": "^4.104.0",
    "pdf-parse": "^2.4.5",
    "puppeteer": "^24.37.3",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-adblocker": "^2.13.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "remotion": "^4.0.424",
    "tiktoken": "^1.0.22",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@payloadcms/eslint-config": "^3.28.0",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/jsdom": "^21.1.7",
    "@types/minimist": "^1.2.5",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.3",
    "sort-package-json": "^3.6.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
